// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// USER & AUTHENTICATION
// ============================================
enum UserRole {
  USER
  SUPERUSER
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String   @default("") @map("password_hash")
  name      String?
  phone     String?
  avatar    String?
  role      UserRole @default(USER)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  accounts          Account[]
  transactions      Transaction[]
  categories        Category[]
  budgets           Budget[]
  notifications     Notification[]
  recurringExpenses RecurringExpense[]

  @@map("users")
}

// ============================================
// ACCOUNTS (Bank Accounts, Credit Cards, Investments)
// ============================================
enum AccountType {
  CHECKING
  SAVINGS
  INVESTMENT
  CREDIT_CARD
  WALLET
  OTHER
}

model Account {
  id              String      @id @default(uuid())
  name            String
  type            AccountType
  initialBalance  Decimal     @default(0) @map("initial_balance") @db.Decimal(15, 2)
  currentBalance  Decimal     @default(0) @map("current_balance") @db.Decimal(15, 2)
  creditLimit     Decimal?    @map("credit_limit") @db.Decimal(15, 2)
  dueDate         Int?        @map("due_date")
  color           String      @default("#6366f1")
  icon            String      @default("Wallet")
  isActive        Boolean     @default(true) @map("is_active")
  createdAt       DateTime    @default(now()) @map("created_at")
  updatedAt       DateTime    @updatedAt @map("updated_at")

  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId       String        @map("user_id")
  transactions      Transaction[]
  recurringExpenses RecurringExpense[]

  @@map("accounts")
}

// ============================================
// CATEGORIES (Income & Expense Categories)
// ============================================
enum TransactionType {
  INCOME
  EXPENSE
  PAYMENT
}

model Category {
  id          String          @id @default(uuid())
  name        String
  description String?
  type        TransactionType
  color       String          @default("#6366f1")
  icon        String          @default("Tag")
  isDefault   Boolean         @default(false) @map("is_default")
  createdAt   DateTime        @default(now()) @map("created_at")
  updatedAt   DateTime        @updatedAt @map("updated_at")

  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId       String        @map("user_id")
  transactions      Transaction[]
  budgets           Budget[]
  recurringExpenses RecurringExpense[]

  @@unique([userId, name, type])
  @@map("categories")
}

// ============================================
// TRANSACTIONS (Income & Expenses)
// ============================================
enum TransactionStatus {
  PENDING
  COMPLETED
  CANCELLED
  SCHEDULED
}

model Transaction {
  id                  String            @id @default(uuid())
  amount              Decimal           @db.Decimal(15, 2)
  date                DateTime
  description         String
  type                TransactionType
  status              TransactionStatus @default(COMPLETED)
  installmentNumber   Int?              @map("installment_number")
  totalInstallments   Int?              @map("total_installments")
  parentTransactionId String?           @map("parent_transaction_id")
  isRecurring         Boolean           @default(false) @map("is_recurring")
  recurringFrequency  String?           @map("recurring_frequency")
  recurringExpenseId  String?           @map("recurring_expense_id")
  createdAt           DateTime          @default(now()) @map("created_at")
  updatedAt           DateTime          @updatedAt @map("updated_at")

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String   @map("user_id")
  account     Account  @relation(fields: [accountId], references: [id], onDelete: Cascade)
  accountId   String   @map("account_id")
  category    Category @relation(fields: [categoryId], references: [id], onDelete: Restrict)
  categoryId  String   @map("category_id")
  attachments Attachment[]
  parentTransaction Transaction?  @relation("Installments", fields: [parentTransactionId], references: [id])
  childTransactions Transaction[] @relation("Installments")
  recurringExpense  RecurringExpense? @relation(fields: [recurringExpenseId], references: [id], onDelete: SetNull)
  metadata    Json?

  @@index([userId, date])
  @@index([userId, type])
  @@index([accountId])
  @@index([categoryId])
  @@map("transactions")
}

// ============================================
// ATTACHMENTS (Receipts, Invoices)
// ============================================
model Attachment {
  id        String   @id @default(uuid())
  url       String
  fileName  String   @map("file_name")
  fileType  String   @map("file_type")
  size      Int
  createdAt DateTime @default(now()) @map("created_at")

  transaction   Transaction @relation(fields: [transactionId], references: [id], onDelete: Cascade)
  transactionId String      @map("transaction_id")

  @@map("attachments")
}

// ============================================
// BUDGETS (Spending Goals by Category)
// ============================================
model Budget {
  id          String   @id @default(uuid())
  amount      Decimal  @db.Decimal(15, 2)
  period      String   @default("MONTHLY")
  startDate   DateTime @map("start_date")
  endDate     DateTime @map("end_date")
  alertAt80   Boolean  @default(true) @map("alert_at_80")
  alertAt100  Boolean  @default(true) @map("alert_at_100")
  isActive    Boolean  @default(true) @map("is_active")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String   @map("user_id")
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  categoryId String   @map("category_id")

  @@unique([userId, categoryId, period])
  @@map("budgets")
}

// ============================================
// NOTIFICATIONS
// ============================================
enum NotificationType {
  BUDGET_ALERT
  DUE_DATE
  SYSTEM
  TRANSACTION
}

model Notification {
  id        String           @id @default(uuid())
  title     String
  message   String
  type      NotificationType
  isRead    Boolean          @default(false) @map("is_read")
  data      Json?
  createdAt DateTime         @default(now()) @map("created_at")

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String @map("user_id")

  @@index([userId, isRead])
  @@map("notifications")
}

// ============================================
// RECURRING EXPENSES (Fixed, Installments, Loans, Subscriptions)
// ============================================
enum RecurringType {
  FIXED         // Aluguel, condomínio, internet
  INSTALLMENT   // Parcelamentos em geral
  CREDIT_CARD   // Parcelas de cartão
  LOAN          // Empréstimos e financiamentos
  SUBSCRIPTION  // Assinaturas (streaming, apps)
}

enum RecurringStatus {
  ACTIVE
  PAUSED
  COMPLETED
  CANCELLED
}

enum RecurringFrequency {
  WEEKLY
  MONTHLY
  YEARLY
}

model RecurringExpense {
  id                  String             @id @default(uuid())
  name                String
  description         String?
  type                RecurringType
  status              RecurringStatus    @default(ACTIVE)
  amount              Decimal            @db.Decimal(15, 2)
  frequency           RecurringFrequency @default(MONTHLY)
  dueDay              Int?               @map("due_day")              // dia do vencimento (1-31)
  startDate           DateTime           @map("start_date")
  endDate             DateTime?          @map("end_date")             // null = sem prazo (despesa fixa)
  currentInstallment  Int?               @map("current_installment")
  totalInstallments   Int?               @map("total_installments")
  interestRate        Decimal?           @map("interest_rate") @db.Decimal(5, 2) // juros p/ empréstimos
  cardName            String?            @map("card_name")            // nome do cartão
  color               String             @default("#6366f1")
  icon                String             @default("Repeat")
  nextDueDate         DateTime?          @map("next_due_date")
  createdAt           DateTime           @default(now()) @map("created_at")
  updatedAt           DateTime           @updatedAt @map("updated_at")

  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String   @map("user_id")
  category   Category? @relation(fields: [categoryId], references: [id])
  categoryId String?  @map("category_id")
  account    Account? @relation(fields: [accountId], references: [id])
  accountId  String?  @map("account_id")
  transactions Transaction[]
  metadata   Json?

  @@index([userId, status])
  @@index([userId, type])
  @@map("recurring_expenses")
}
